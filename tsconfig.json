{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "paths": {
      "@personal-site/*": ["./packages/*/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
